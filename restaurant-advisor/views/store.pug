extends layout

include mixins/_reviewForm
include mixins/_review
include mixins/_reservationForm

block content
  .container
    .mb-3.card
        img.card-img-top(src=`/uploads/${store.photo || 'store.png'}`)
    .card-body
        h5.fs-0 #{store.name}
        p.mb-0= store.address
    .no-gutters.row
        .pr-lg-2.col-lg-12
            .card
                .card-body
                    p= store.description
                    if store.tags
                        each tag in store.tags
                            a.badge.bg-light.text-primary(href=`/tags/${tag}`) #{tag}

    if coordinates
        .no-gutters.row.pt-3.col-lg-12
            .card
                .card-body
                    h5 Location
                    #map(style="height: 400px;")

    // Mostrar Time Slots agrupados por día
    // Mostrar Time Slots agrupados por día
    if groupedTimeSlots && Object.keys(groupedTimeSlots).length > 0
        .no-gutters.row.pt-3.col-lg-12
            .card
                .card-body
                    h5 Time Slots
                    each slots, day in groupedTimeSlots
                        h6.mt-3= day
                        table.table
                            thead
                                tr
                                    th Opening time
                                    th Closing time
                                    th Max. reservations
                            tbody
                                each slot in slots
                                    tr
                                        td= slot.startTime
                                        td= slot.endTime
                                        td= slot.maxReservations


    if user
        .no-gutters.row 
            .pt-3.col-lg-12 
                .card 
                    .card-body 
                        +reservationForm(store)

    if user
        .no-gutters.row 
            .pt-3.col-lg-12 
                .card 
                    .card-body 
                        +reviewForm(store)

    if store.reviews
        each r in store.reviews 
            .no-gutters.row 
                .pt-3.col-lg-12 
                    .card 
                        .card-body 
                            +review(r)

block scripts
  script(src="/dist/leaflet.js")

  if coordinates
      script.
        var customIcon = L.icon({
            iconUrl: '/dist/images/marker-icon.png',
            iconSize: [30, 30],
            iconAnchor: [12, 41],
            popupAnchor: [3, -35],
            shadowSize: [41, 41]
        });
        document.addEventListener('DOMContentLoaded', function () {
            const map = L.map('map').setView([#{coordinates.lat}, #{coordinates.lng}], 15);
            L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                maxZoom: 18,
                attribution: '© OpenStreetMap contributors'
            }).addTo(map);

            L.marker([#{coordinates.lat}, #{coordinates.lng}], {icon: customIcon})
                .addTo(map)
                .bindPopup('<strong>#{store.name}</strong><br>#{store.averageRating}')
                .openPopup();
        });
