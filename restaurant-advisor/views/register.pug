extends layout

block content
    .container
        h2 #{title}
        form(action='/register' method='POST' enctype='application/x-www-form-urlencoded')
            .mb-3
                label(for="name" class="form-label") Name
                input.form-control(type="text" name="name" value=body ? body.name : '' required)
            .mb-3
                label(for="email" class="form-label") Email
                input.form-control(type="email" name="email" value=body ? body.email : '' required)
            .mb-3
                label(for="password" class="form-label") Password
                input.form-control(type="password" name="password" required)
            .mb-3
                label(for="password-confirm" class="form-label") Confirm Password
                input.form-control(type="password" name="password-confirm" required)
            button.btn.btn-primary(type="submit") Register
